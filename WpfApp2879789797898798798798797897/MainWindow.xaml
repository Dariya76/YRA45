<Window x:Class="WpfApp2879789797898798798798797897.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Icon="./Resources/icon.ico"
        xmlns:local="clr-namespace:WpfApp2879789797898798798798797897"
        mc:Ignorable="d"
        Title="Программа для детей" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.2*"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="0.2*"></RowDefinition>
        </Grid.RowDefinitions>
        <Image Source=".//Resources/logo.png" HorizontalAlignment="Left" Margin="45,0,0,0"></Image>
        <StackPanel Grid.Row="0" Background="#A5E887" Orientation="Horizontal" Margin="0,0, -0.4,0">
            <Image Source=".//Resources/logo.png" HorizontalAlignment="Left" Margin="45,0,0,0"></Image>
            <TextBlock Text="Детский Мир" FontSize="25" FontFamily="Candara" Margin="120,0,0,0" VerticalAlignment="Center">
            </TextBlock>
            <Button x:Name="BtnBack" Content="Назад" FontSize="17" Background="#B3F4E9" FontFamily="Tahoma" Width="130" Height="30" Margin="140,0,0,0" Style="{StaticResource mainBtn}" Click="BtnBack_Click"/>
        </StackPanel>
        <StackPanel Grid.Row="2" Background="#A5E887" Orientation="Horizontal" Margin="0,0, -0.4,0">
            <Button x:Name="BtnExit" Content="Выход" Margin="600,0,0,0" Background="#B3f4E9" Click="BtnExit_Click" Width="130" Height="30" Style="{StaticResource mainBtn}"/>
        </StackPanel>
        <StackPanel VerticalAlignment="Center" Margin="0,0, -0.4,0 " Grid.Row="1">
            <Image Source=".//Resources/logo.png" Opacity="0.2" Width="300"/>
        </StackPanel>
        <Frame x:Name="frmMain" ContentRendered="frmMain_ContentRendered" Grid.Row="1" NavigationUIVisibility="Hidden"></Frame>
    </Grid>
</Window>
